<div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0">
  <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
    <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl">
      Register
    </h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "space-y-4 md:space-y-6") do |f| %>
      <div class="field mb-3">
        <%= f.label :email, class: "block mb-2 text-sm font-medium text-gray-900" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5" %>
      </div>

      <div class="field mb-3">
        <%= f.label :password, class: "block mb-2 text-sm font-medium text-gray-900" %>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "••••••••", class: "bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field mb-3">
          <%= f.label :remember_me, class: "block text-sm font-medium text-gray-900" %>
          <%= f.check_box :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "w-full text-white bg-blue-600 hover:cursor-pointer hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>