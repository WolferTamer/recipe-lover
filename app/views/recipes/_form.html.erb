<%= form_with(model: recipe) do |form| %>
  <% if recipe.errors.any? %>
    <div class="text-red-600">
      <h2 class="text-2xl"><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved</h2>

      <ul>
        <% recipe.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mb-3">
    <%= form.label :title, class: "block mb-2 text-sm font-medium text-gray-900" %>
    <%= form.text_field :title, autofocus: true, autocomplete: "title", class: "bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5" %>
  </div>

  <div class="field mb-3">
    <%= form.label :body, class: "block mb-2 text-sm font-medium text-gray-900" %>
    <%= form.text_area :body, autofocus: true, autocomplete: "title", class: "bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5" %>
  </div>
  <div class="actions">
    <%= form.submit "Submit", class: "w-full text-white bg-blue-600 hover:cursor-pointer hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center" %>
  </div>
<% end %>