<div>
  <h1 class="font-bold text-4xl mb-3">My Recipes</h1>
  <div class="mb-3">
    <%= render 'recipes/add', class: "mb-3" %>
  </div>
  <% if @recipes.size == 0 %>
    <p>It doesn't look like you have any recipes</p>
  <% else %>
    <% @recipes.each do |recipe| %>
      <div class="mb-4">
        <%= render recipe %>
      </div>
    <% end %>
  <% end %>
</div>
